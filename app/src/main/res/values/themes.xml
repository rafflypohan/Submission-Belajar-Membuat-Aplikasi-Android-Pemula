<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IndoTour" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
<!--         Primary brand color. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryVariant">#019CA3</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TextColor.Header" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_black</item>
    </style>

    <style name="TextColor.Body" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextColor.Accent" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/teal</item>
        <item name="drawableStartCompat">@drawable/ic_baseline_location_on_14</item>
    </style>

    <style name="CardBackgrund" parent="">
        <item name="android:backgroundTint">@color/gray_light</item>
    </style>

</resources>