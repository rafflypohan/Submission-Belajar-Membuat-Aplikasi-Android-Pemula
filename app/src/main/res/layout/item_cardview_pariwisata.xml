<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="#66000000"
            tools:srcCompat="@drawable/nusa_penida"
            android:scaleType="matrix"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="20dp"
            android:paddingStart="14dp"
            android:paddingEnd="22dp"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/tv_nama_tempat"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="@string/nama_tempat"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lokasi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="@string/lokasi"
                    android:textColor="#f5f5f5"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_reg"
                    android:layout_marginStart="10dp"
                    app:drawableStartCompat="@drawable/ic_baseline_location_on_12"
                    android:drawablePadding="5dp"
                    android:elegantTextHeight="true"
                    />

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="5dp"
                    android:elegantTextHeight="true"
                    android:fontFamily="@font/poppins_reg"
                    android:textColor="#f5f5f5"
                    android:textSize="12sp"
                    android:textAlignment="textEnd"
                    app:drawableStartCompat="@drawable/ic_baseline_star_rate_14"
                    tools:text="rating" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>